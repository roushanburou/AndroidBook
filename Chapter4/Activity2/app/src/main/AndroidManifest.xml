<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bkrc.activity2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bkrc.activity2.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bkrc.activity2.Main2Activity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.bkrc.activity2.Main3Activity"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name="com.bkrc.activity2.MainFirstActivity"
            android:launchMode="singleInstance" />
        <activity android:name="com.bkrc.activity2.MainSecondActivity">
            <intent-filter>
                <action android:name="com.bkrc.activity2.START"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>